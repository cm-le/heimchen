%h1.page-header Stichwort anlegen
%row
  = form_for @changeset, keyword_path(@conn, :create), fn f ->
    =render("_keyword.html", f: f, categories: @categories, changeset: @changeset)
    .form-group.row
      .offset-sm-2.col-sm-10
        =submit("Neues Stichwort anlegen", class: "btn btn-primary")
  - end 
